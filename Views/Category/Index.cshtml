@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-e">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">

            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i>&nbsp;Create new category</a>
        </div>
    </div>
    <br /><br />

    <table class="table table-borderd table-stripped border-white">
        <tr>
        <thead>
            <th>Name</th>
            <th>Display Order</th>
            <th>Date Created</th>
            <th>Actions</th>
        </thead>
        </tr>

        <tbody>
            @foreach (var category in Model)
            {
                                                                                                <tr>
                                                                                                    <td>@category.Name</td>
                                                                                                    <td>@category.DisplayOrder</td>
                                                                                                    <td>@category.CreatedDateTime.</td>
                                                                                                    <td>

                                    <div class="w-75 btn-group" role="group">
                                        <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"><i class="bi bi-pencil-square"></i></a>
                                         <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                         <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-bucket"></i></button>
                                         </form>

                                    </div>



                                                                                                    </td>
                                                                                                </tr>
            }
        </tbody>
    </table>
</div>